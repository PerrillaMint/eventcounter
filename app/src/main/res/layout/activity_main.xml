<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Card -->
            <androidx.cardview.widget.CardView
                style="@style/SectionCard"
                android:backgroundTint="@color/primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_analytics"
                        android:layout_marginBottom="12dp"
                        app:tint="@color/on_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Events"
                        android:textColor="@color/on_primary"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvTotalCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/on_primary"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Counter Buttons Section -->
            <androidx.cardview.widget.CardView style="@style/SectionCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        style="@style/SectionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event Counters"
                        android:drawableStart="@drawable/ic_touch_app"
                        android:drawablePadding="12dp"
                        android:gravity="center_vertical" />

                    <!-- Event Button 1 -->
                    <LinearLayout
                        android:id="@+id/btnEvent1Container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/button_ripple_effect"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="1"
                            android:background="@drawable/circle_background_1"
                            android:textColor="@color/on_primary"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvEvent1Name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Event A"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/on_surface" />

                            <TextView
                                android:id="@+id/tvEvent1Count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 events"
                                android:textSize="14sp"
                                android:textColor="@color/on_surface_variant" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_add"
                            app:tint="@color/primary" />

                    </LinearLayout>

                    <!-- Event Button 2 -->
                    <LinearLayout
                        android:id="@+id/btnEvent2Container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/button_ripple_effect"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="2"
                            android:background="@drawable/circle_background_2"
                            android:textColor="@color/on_primary"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvEvent2Name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Event B"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/on_surface" />

                            <TextView
                                android:id="@+id/tvEvent2Count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 events"
                                android:textSize="14sp"
                                android:textColor="@color/on_surface_variant" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_add"
                            app:tint="@color/primary" />

                    </LinearLayout>

                    <!-- Event Button 3 -->
                    <LinearLayout
                        android:id="@+id/btnEvent3Container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/button_ripple_effect"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="3"
                            android:background="@drawable/circle_background_3"
                            android:textColor="@color/on_primary"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvEvent3Name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Event C"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/on_surface" />

                            <TextView
                                android:id="@+id/tvEvent3Count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 events"
                                android:textSize="14sp"
                                android:textColor="@color/on_surface_variant" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_add"
                            app:tint="@color/primary" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Navigation Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSettings"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Settings"
                    android:textSize="16sp"
                    app:icon="@drawable/ic_settings"
                    app:iconGravity="textStart"
                    app:cornerRadius="12dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShowCounts"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Statistics"
                    android:textSize="16sp"
                    app:icon="@drawable/ic_bar_chart"
                    app:iconGravity="textStart"
                    app:cornerRadius="12dp"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>